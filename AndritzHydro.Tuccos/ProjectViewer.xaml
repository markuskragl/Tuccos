<UserControl x:Class="AndritzHydro.Tuccos.ProjectViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AndritzHydro.Tuccos"
             xmlns:p="clr-namespace:AndritzHydro.Tuccos.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Project}"
             >
             
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">


        
            <ListView VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                <ListView.View >
                    <GridView >
                        <GridViewColumn Header="Id" Width="75" />
                        <GridViewColumn Header="Name" Width="75"/>
                        <GridViewColumn Header="Year" Width="75"/>

                        


                </GridView>
                </ListView.View>
            </ListView>

    </Grid>
</UserControl>
