<UserControl x:Class="AndritzHydro.Tuccos.ProjectViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AndritzHydro.Tuccos"
             xmlns:p="clr-namespace:AndritzHydro.Tuccos.Properties"
             xmlns:vm="clr-namespace:AndritzHydro.Tuccos.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Project}"
             >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.939*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox 
            Header="Classic INotifyPropertyChanged Example" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ListBox 
                                ItemsSource="{Binding CountriesFinal}" 
                                SelectedItem="{Binding SelectedPerson}" 
                                DisplayMemberPath="Code" 
                                HorizontalAlignment="Left"/>
                            <DataGrid 
                                ItemsSource="{Binding ProjectListFinal}" 
                                SelectedItem="{Binding SelectedPerson}" 
                                HorizontalAlignment="Left" 
                                Margin="5,0,0,0"/>
                            <ComboBox 
                                ItemsSource="{Binding CountriesFinal}"
                                SelectedItem="{Binding SelectedPerson}" 
                                DisplayMemberPath="Code" 
                                Margin="5,0,0,5" 
                                VerticalAlignment="Top"/>
                        </StackPanel>
                        <!--<TextBox 
                            x:Name="tb1" 
                            Text="{Binding TextProperty1, UpdateSourceTrigger=PropertyChanged}" 
                            Margin="5"/>-->
                        <TextBlock 
                            FontWeight="Bold" 
                            Margin="5" 
                            Text="The TextBox says '">
                            <Run Text="{Binding TextProperty1}"/><Run Text="'"/></TextBlock>

                        <StackPanel HorizontalAlignment="Left" Height="200"  VerticalAlignment="Top" Width="300">
                            <Label Content="Main Project Information" FontWeight="Bold"/>
                            <StackPanel Margin="10,0,0,0" Orientation="Horizontal" Height="35">
                                <TextBlock  TextWrapping="Wrap" Width="70" Text="Id"/>
                                <TextBox x:Name="tb1" Height="23" Width="100" TextWrapping="Wrap" Text="{Binding ProjectId, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="10,0,0,0" Orientation="Horizontal" Height="35">
                                <TextBlock TextWrapping="Wrap" Width="70" Text="Name"/>
                                <TextBox Height="23" Width="100" TextWrapping="Wrap" Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Margin="10,0,0,0" Orientation="Horizontal" Height="35">
                                <TextBlock TextWrapping="Wrap" Width="70" Text="Year"/>
                                <TextBox Height="23" Width="100" TextWrapping="Wrap" Text="{Binding ProjectYear, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,0"  Height="35">

                        </StackPanel>
                        <Button
                            Height="20"
                            Width="100"
                            Content="Add Project"
                            Command="{Binding SaveProject}"
                            Focusable="False" 
                            Margin="10,0,0,0"
                            
                            
                            
                    />


                    </StackPanel>
                    
                </ScrollViewer>
                <!--<Button 
                    Grid.Row="1" 
                    Content="Add person" 
                    Command="{Binding AddUserCommand}" 
                    CommandParameter="{Binding Text, ElementName=tb1}" 
                    Margin="5" 
                    Focusable="False"/>-->
            </Grid>
        </GroupBox>
        <GroupBox>
            <Grid>

            </Grid>
        </GroupBox>
    </Grid>
</UserControl>